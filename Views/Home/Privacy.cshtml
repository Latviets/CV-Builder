@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-transparent">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">Privacy Policy</h1>
                <a asp-action="Index" class="btn btn-primary btn-lg">
                    <i class="bi bi-arrow-left"></i> Back to Collection
                </a>
            </div>
        </div>
        
        <div class="card-body">
            <div class="alert alert-info d-flex align-items-center" role="alert">
                <i class="bi bi-info-circle-fill me-2 fs-4"></i>
                <div>
                    Our Privacy Policy is currently being updated to better serve you and ensure compliance with the latest data protection regulations.
                </div>
            </div>

            <div class="mt-4">
                <h5 class="mb-3"><i class="bi bi-clock-history"></i> Coming Soon</h5>
                <p class="lead text-muted">
                    We are working on comprehensive privacy guidelines that will cover:
                </p>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <i class="bi bi-shield-check text-primary me-2"></i>
                        Data Protection Measures
                    </li>
                    <li class="list-group-item">
                        <i class="bi bi-person-lock text-primary me-2"></i>
                        Personal Information Handling
                    </li>
                    <li class="list-group-item">
                        <i class="bi bi-database-lock text-primary me-2"></i>
                        Data Storage and Security
                    </li>
                    <li class="list-group-item">
                        <i class="bi bi-hand-thumbs-up text-primary me-2"></i>
                        User Rights and Consent
                    </li>
                </ul>
            </div>

            <div class="mt-4">
                <p class="text-muted">
                    <i class="bi bi-envelope me-2"></i>
                    For any privacy-related questions, please turn to the person reading this message.
                </p>
            </div>
        </div>
    </div>
</div> 