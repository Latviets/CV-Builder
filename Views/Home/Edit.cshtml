@model CVModel

<h2>Edit CV</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Surname"></label>
        <input asp-for="Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div>
        <h4>Education</h4>
        <div id="education-section">
            @for (int i = 0; i < Model.Education.Count; i++)
            {
                <div class="card mb-3">
                    <div class="card-header">
                        <h5>Education @i</h5>
                    </div> <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Education[i].Institution"></label>
                            <input asp-for="Education[i].Institution" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Education[i].Faculty"></label>
                            <input asp-for="Education[i].Faculty" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Education[i].FieldOfStudy"></label>
                            <input asp-for="Education[i].FieldOfStudy" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Education[i].EducationLevel"></label>
                            <input asp-for="Education[i].EducationLevel" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Education[i].Status"></label>
                            <input asp-for="Education[i].Status" class="form-control" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div>
        <h4>Work Experience</h4>
        <div id="work-experience-section">
            @for (int i = 0; i < Model.WorkExperience.Count; i++)
            {
                <div class="card mb-3">
                    <div class="card-header">
                        <h5>Work Experience @i</h5>
                    </div> <div class="card-body">
                        <div class="form-group">
                            <label asp-for="WorkExperience[i].Company"></label>
                            <input asp-for="WorkExperience[i].Company" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="WorkExperience[i].JobTitle"></label>
                            <input asp-for="WorkExperience[i].JobTitle" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="WorkExperience[i].Workload"></label>
                            <input asp-for="WorkExperience[i].Workload" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="WorkExperience[i].StartDate"></label>
                            <input asp-for="WorkExperience[i].StartDate" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="WorkExperience[i].EndDate"></label>
                            <input asp-for="WorkExperience[i].EndDate" class="form-control" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
